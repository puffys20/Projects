<script>
    // Função para criar corações animados
    function criarCoracoes(qtd) {
        for (let i = 0; i < qtd; i++) {
            const heart = document.createElement('div');
            heart.classList.add('heart');
            heart.style.left = Math.random() * window.innerWidth + 'px';
            heart.style.bottom = '0px';
            heart.style.background = ['#ff0000', '#ff69b4', '#ff1493'][Math.floor(Math.random() * 3)];
            document.body.appendChild(heart);

            // Remove coração após animação para não sobrecarregar
            setTimeout(() => heart.remove(), 6000);
        }
    }

    // Primeira leva após 2 segundos
    setTimeout(() => criarCoracoes(40), 2000);

    // Criar corações continuamente a cada 1.5 segundos
    setInterval(() => criarCoracoes(20), 1500);
</script>
